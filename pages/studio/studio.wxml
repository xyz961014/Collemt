<view class="page">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">任务进度</view>
                <view class="weui-cell__ft">{{text.textID}}/{{numall}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">文本长度</view>
                <view class="weui-cell__ft">{{text.textdur}}ms</view>
            </view>
        </view>
<view class="weui-cells__title"> </view>
 <view class="weui-form-preview">
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">文本</view>
                    <view class="weui-form-preview__value">{{text.text}}</view>
                </view>
            </view>
    <view class="weui-form-preview__ft">
                <view wx:if="{{recordingbool}}" bindtap='stopbuttontap' class="weui-form-preview__btn weui-form-preview__btn_stop" hover-class="weui-form-preview__btn_active">停止</view>
                <block wx:else>
                <view wx:if='{{!record.duration}}' bindtap='recordbuttontap' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">录音</view>
                <view wx:else class="weui-form-preview__btn weui-form-preview__btn_disable">录音</view>
                </block>
                <view bindtap='resetbuttontap' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">重置</view>
            </view>
    </view>
<view class="weui-cells__title"> </view>
<view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">已录制时长</view>
                <view class="weui-cell__ft">{{view.durstring}} s</view>
            </view>
        </view>
<view class="weui-cells__title"> </view>
 <view class="weui-form-preview">
    <view class="weui-form-preview__ft">
    <block wx:if='{{!recordingbool && record.duration}}'>
                <view bindtap='playvoice' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">播放录音</view>
                <view bindtap='pausevoice' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">暂停播放</view>
                <view bindtap='stopvoice' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">停止播放</view>
    </block>
        <block wx:else>
                <view class="weui-form-preview__btn weui-form-preview__btn_disable">播放录音</view>
                <view class="weui-form-preview__btn weui-form-preview__btn_disable">暂停播放</view>
                <view class="weui-form-preview__btn weui-form-preview__btn_disable">停止播放</view>
        </block>
            </view>
    </view>
<view class="weui-cells__title"> </view>
    <view class="weui-form-preview">
            <view class="weui-form-preview__ft">
                <view wx:if='{{!recordingbool}}' bindtap='savebuttontap' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">保存</view>
                <view wx:else class="weui-form-preview__btn weui-form-preview__btn_disable">保存</view>
                </view>
    </view>
    <view class="weui-cells__title"> </view>
    <view wx:if='{{saved}}' class="weui-form-preview">
            <view class="weui-form-preview__ft">
                <view bindtap='nextbuttontap' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">下一任务</view>
            </view>
    </view>
</view>

